<header class="trm-top-bar" data-scroll data-scroll-sticky data-scroll-target=".locomotive-scroll__sticky-target" data-scroll-offset="-10">
	<div class="container">
		<div class="trm-left-side">
			<!-- logo -->
			<a href="<%- url_for('/')%>" class="trm-logo-frame trm-anima-link">
				<% if(theme.favicon.logo) { %>
					<img src="<%- url_for(theme.favicon.logo)%>" alt="logo">
				<% } %>
				<% if(theme.user.last_name) { %>
					<div class="trm-logo-text">
						<%= theme.user.last_name %><span><%= theme.user.first_name %></span>
					</div>
				<% } %>
			</a>
			<!-- logo end -->
		</div>
		<div class="trm-right-side">

			<!-- menu -->
			<div class="trm-menu">
				<nav>
					<ul>
						<% theme.top_bars.forEach(element=> { %>
						<li class="menu-item-has-children <%= url_for(element.url) + 'index.html' === url_for(path) ?'current-menu-item':'' %>">
							<a <%- element.noswup ? "data-no-swup":"" %> href="<%- url_for(element.url) %>" target="<%- element.target %>">
								<%-__(element.title)%>
							</a>
							<% if(element.children) { %>
							<ul>
								<% element.children.forEach(item=> { %>
								<li>
									<a <%- item.noswup ? "data-no-swup":"" %> href="<%- url_for(item.url) %>" target="<%- element.target %>">
										<%-__(item.title)%>
									</a>
								</li>
								<% }) %>
							</ul>
							<% } %>
						</li>
						<% }) %>
					</ul>
				</nav>
			</div>
			<!-- menu end -->
			
			<!-- mode switcher place -->
			<% if(theme.theme.switch){%>
			<div class="trm-mode-switcher-place">
				<!-- <div class="trm-hidden-switcher"> -->
					<div class="trm-mode-switcher">
					  <%- icon(theme.icons.sun) %>
					  <input class="tgl tgl-light" id="trm-swich" type="checkbox">
					  <label class="trm-swich" for="trm-swich"></label>
					  <%- icon(theme.icons.moon) %>
					</div>
				  <!-- </div> -->
			</div>
			<% } %>
			<!-- mode switcher place end -->

			<% if(theme.search.enable){ %>
				<% if(theme.search.type === 'local'){ %>
				<div id="trm-search-btn" class="trm-search-btn">
					<%- icon(theme.icons.search) %>
				</div>
				<% } else if(theme.search.type === 'engine') { %>
					<a id="trm-search-btn" class="trm-search-btn" data-no-swup target="_blank" href="<%- theme.search.href + theme.search.domain %>">
						<%- icon(theme.icons.search) %>
					</div>
				<% } %> 
			<% } %> 

		</div>
		<div class="trm-menu-btn">
			<span></span>
		</div>
	</div>
</header>